{
    "app-id" : "io.github.igaldino.CoyoteTM",
    "runtime" : "org.freedesktop.Platform",
    "runtime-version" : "20.08",
    "sdk" : "org.freedesktop.Sdk",
    "command" : "coyotetm",
    "finish-args" : [
        "--share=ipc",
        "--socket=x11",
        "--device=dri",
        "--filesystem=~/coyotetm"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "fltk",
            "buildsystem" : "autotools",
            "config-opts" : [
                "--enable-xdbe",
                "--enable-xft"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/fltk/fltk/archive/refs/tags/release-1.3.5.tar.gz",
                    "sha256" : "5c534287b0e03b9520ff866704a5649268986b371bdf8f6ac003fa240e761901"
                }
            ]
        },
        {
            "name" : "libdb",
            "buildsystem" : "simple",
            "subdir" : "build_unix",
            "build-commands" : [
                "../dist/configure --prefix=/app --enable-compat185 --enable-dbm --disable-static --enable-cxx",
                "make",
                "make install"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://download.oracle.com/berkeley-db/db-6.2.23.tar.gz",
                    "sha256": "47612c8991aa9ac2f6be721267c8d3cdccf5ac83105df8e50809daea24e95dc7"
                }
            ]
        },
        {
            "name" : "coyotetm",
            "buildsystem" : "meson",
            "config-opts" : [
                "--libdir=lib"
            ],
            "builddir" : true,
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/igaldino/coyotetm.git",
                    "branch" : "coyotetm-1-0",
                    "commit" : "1984aa9c441bdb1a98364b49535d30efc06b8c4d"
                }
            ]
        }
    ]
}
